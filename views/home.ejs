<% include ./header %>

<div class='container mt-4'>
  
  <% if (messages.login) { %>
  <div class='row'>
    <div class='col-md-3'></div>
    <div class='col-md-6 alert alert-success' id='login-success'>Login success.</div>
    <div class='col-md-3'></div>
  </div>
  <% } %>

  <div class='row search'>
    <div class='col-md-12'>
      <div class="input-group mb-3 input-group-lg">
        <input type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
          <a class='btn btn-info' href='#'>Search</a>
        </div>
      </div>
    </div>
  </div>

  <div class='row menu-ads'>
    <div class='col-md-3 menu'>
      <ul class="list-group">
        <li class="list-group-item bg-info">
          <a href='/categories/self help' class='text-white'>Self Help</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/economic' class='text-white'>Economic</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/technology' class='text-white'>Technology</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/history' class='text-white'>History</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/creativity' class='text-white'>Creativity</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/commic' class='text-white'>Commic</a>
        </li>
        <li class="list-group-item bg-info">
          <a href='/categories/literature' class='text-white'>Literature</a>
        </li>
      </ul>
    </div>

    <div class='col-md-9 ads'>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/photos/photo1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/photos/photo2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/photos/photo3.jpg" alt="Third slide">
          </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class='row deals mt-3'>

    <div class='col-md-12 mt-3'>
      <h1 class='font-weight-bold text-danger'>Newest Books</h1>
    </div>

    <% for (let item of data) { %>
    <div class='col-md-3 mt-4' id='item'>
      <div class="card">
        <a href='/product/<%= item._id %>'><img class="card-img-top" src="/photos/<%= item.img %>" alt="Card image cap"></a>
        <div class="card-body">
          <a href='/product/<%= item._id %>'><h5 class="card-title"><%= item.title.toUpperCase() %></h5></a>
          <p class="card-text short-description"><%= item.description.substr(0, 50) + '...' %></p>
          <a href="/product/<%= item._id %>" class="btn btn-info">Details</a>
        </div>
      </div>
    </div>
    <% } %>

</div>

<script>

window.onload = () => {
  setTimeout(() => {
    document.getElementById('login-success').classList.add('d-none');
  }, 3000);
};

</script>

<% include ./footer %>